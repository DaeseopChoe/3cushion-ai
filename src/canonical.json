{
  "meta": {
    "version": "1.0",
    "description": "FG→RG projection 규약 전용 canonical 파일. 시스템 로직(system_logic.json)과는 분리하여 좌표계 변환만 담당한다."
  },

  "coords": {
    "offset_fg2rg": 2.25,
    "m_min": 0.05,
    "theta_t_max": 68
  },

  "rails": {
    "TOP": {
      "normal": [0, -1],
      "fg_line": 42.25,
      "rg_line": 40
    },
    "BOTTOM": {
      "normal": [0, 1],
      "fg_line": -2.25,
      "rg_line": 0
    },
    "LEFT": {
      "normal": [1, 0],
      "fg_line": -2.25,
      "rg_line": 0
    },
    "RIGHT": {
      "normal": [-1, 0],
      "fg_line": 82.25,
      "rg_line": 80
    }
  },

  "rules": {
    "space_detection": {
      "fg_threshold_top": 40,
      "fg_threshold_bottom": 0,
      "fg_margin": 2.25
    },
    "projection": {
      "allow_fg_input": true,
      "strict_no_extrapolation": true,
      "dot_guard_epsilon": 1e-6
    }
  }
}
