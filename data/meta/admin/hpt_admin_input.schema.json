{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HP/T Admin Input Schema",
  "description": "Hit Point / Thickness admin input schema",
  "type": "object",
  "required": [
    "hit_point",
    "thickness"
  ],
  "properties": {
    "hit_point": {
      "type": "object",
      "description": "큐볼 타점 (관리자가 공 위에서 직접 지정)",
      "required": ["x", "y"],
      "properties": {
        "x": {
          "type": "number",
          "description": "큐볼 중심 기준 X 좌표 (-1.0 ~ 1.0)",
          "minimum": -0.3,
          "maximum": 0.3
        },
        "y": {
          "type": "number",
          "description": "큐볼 중심 기준 Y 좌표 (-1.0 ~ 1.0)",
          "minimum": -0.3,
          "maximum": 0.3
        }
      },
      "additionalProperties": false
    },
    "thickness": {
      "type": "integer",
      "description": "두께 (1/8 단위 기준)",
      "minimum": 1,
      "maximum": 7
    }
  },
  "additionalProperties": false
}
